{
  "version": 2,
  "functions": {
    "api/[...path].js": {
      "runtime": "nodejs18.x"
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "./dist",
        "buildCommand": "npm run vercel-build"
      }
    },
    {
      "src": "vercel-proxy.js",
      "use": "@vercel/node"
    }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/vercel-proxy.js"
    },
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
}